#include <stdio.h>

int main(void) {
  int i,j,k,m,c;
   for (i=1; i<=4; i++){
     c=i;
     for (j=1; j<=4-i; j++){
       printf(" ");
     } for (k=1; k<=i; k++){
       printf("%d",c);
       c--;
       
     }   c++;
     c++;
     for (m=1; m<=i-1; m++){
       printf("%d",c);
       c++;
       
     }  printf("\n");
     printf("\n");
   }
  return 0;
}
