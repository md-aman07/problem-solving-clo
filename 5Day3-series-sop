using namespace std;

int sum(int n){
  float fact = 2;
  float sum=0;
  int m=1;
  for(int i=3; i<=3; i++)
  {
    fact = fact*i;
        if(i%2 != 0)
        {
      int m = m*(-1);
      sum = sum + (m*(pow(2,i)/fact));
          cout<<"yaha bhi dekhan padega"<<i<<endl;
          cout<<"yha par fact chek kre :"<<fact<<endl;
          cout<<"value of m :"<<m<<endl;
    }
    
  }
  return sum+2;
}

int main(){
